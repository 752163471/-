<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.health.dao.CheckItemDao">
    <insert id="add" parameterType="checkItem">
        insert t_checkitem (code,name,sex,age,price,type,remark,attention) values (#{code},#{name},#{sex},#{age},#{price},#{type},#{remark},#{attention})
    </insert>

    <select id="findPage" parameterType="string" resultType="checkItem">
        select * from t_checkitem
        <if test="value != null and value.length > 0">
            where code=#{value} or name=#{value}
        </if>
    </select>

    <delete id="delete" parameterType="int">
        delete from t_checkitem where id=#{id}
    </delete>

    <select id="queryCheckgroupCheckitemByCheckitemId" parameterType="int" resultType="long">
        select count(*) from t_checkgroup_checkitem where checkitem_id=#{checkitem_id}
    </select>

    <select id="findById" parameterType="int" resultType="checkItem">
        select * from t_checkitem where id=#{id}
    </select>

    <update id="edit" parameterType="checkItem">
        update t_checkitem
        <set>
            <if test="code != null and code.length > 0">
                code=#{code},
            </if>
            <if test="name != null and name.length > 0">
                name=#{name},
            </if>
            <if test="sex != null and sex.length > 0">
                sex=#{sex},
            </if>
            <if test="age != null and age.length > 0">
                age=#{age},
            </if>
            <if test="price != null">
                price=#{price},
            </if>
            <if test="type != null and type.length > 0">
                type=#{type},
            </if>
            <if test="remark != null and remark.length > 0">
                remark=#{remark},
            </if>
            <if test="attention != null and attention.length > 0">
                attention=#{attention},
            </if>
        </set>
        where id=#{id}
    </update>


    <select id="findAll" resultType="checkItem">
        select * from t_checkitem
    </select>

    <!--移动端查询套餐对应的检查组对应的检查项-->
    <select id="findCheckItemListById" parameterType="int" resultType="checkItem">
        SELECT * FROM t_checkitem WHERE id IN (SELECT checkitem_id FROM t_checkgroup_checkitem WHERE checkgroup_id = #{checkgroup_id})
    </select>
</mapper>

